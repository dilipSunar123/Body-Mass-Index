<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/appTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/male_card_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#2c3e50"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/female_card_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#2c3e50"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="32dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#2c3e50"
        android:layout_gravity="center"
        android:layout_marginHorizontal="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEIGHT(cm)"
                android:textColor="#ddd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/height_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="46sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/dec_height"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_reduce"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/substractheight"/>

                <ImageView
                    android:id="@+id/inc_height"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/addheight"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="36dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="180dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#2c3e50"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEIGHT"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#ddd"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/weight_value"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="0"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/dec_weight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_reduce"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/substractheight"/>

                <ImageView
                    android:id="@+id/inc_weight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/addheight"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="180dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#2c3e50"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGE"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#ddd"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/age_value"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="0"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/dec_age"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_reduce"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/substractheight"/>

                <ImageView
                    android:id="@+id/inc_age"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/addheight"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"
        android:text="calculate"
        android:textSize="18sp" />

</LinearLayout>